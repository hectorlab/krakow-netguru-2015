%p#notice= notice
%p#error= flash[:error]

%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Description
      %th Price
      %th Category
      %th
      %th

  %tbody
    %tr
      %td= product.title
      %td= product.description
      %td= product.price
      %td= product.category.name

%h3 Reviews
= render 'reviews/form'

= render reviews

= link_to 'Edit', edit_category_product_path(category.id, product.id)
\|
= link_to 'Back', category_products_path, class: 'btn btn-link'
